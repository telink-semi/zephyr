/dts-v1/;

#include <freq.h>
#include <telink/telink_w91.dtsi>
#include "tlsr9118bdk40d-pinctrl.dtsi"

/ {
	model = "telink,w91";
	compatible = "telink,tlsr9118bdk40d";

	aliases {
		led0 = &led_red;
		led1 = &led_green;
		sw0 = &key_1;
		sw1 = &key_2;
		pwm-led0 = &pwm_led_red;
		pwm-0 = &pwm0;
	};

	leds {
		compatible = "gpio-leds";

		led_red: led_0 {
			gpios = <&gpio0 20 GPIO_ACTIVE_HIGH>;
			label = "LED Red";
		};

		led_green: led_1 {
			gpios = <&gpio0 19 GPIO_ACTIVE_HIGH>;
			label = "LED Green";
		};
	};

	pwm_leds {
		compatible = "pwm-leds";

		pwm_led_red: pwm_led_0 {
			pwms = <&pwm0 4 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM LED Red";
		};
	};

	/* Short TL_Key1 (J20 pin 11) to ground (J20 pin 25-35) */
	keys {
		compatible = "gpio-keys";

		key_1: button_1 {
			label = "User KEY1";
			gpios = <&gpio0 16 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};

		key_2: button_2 {
			label = "User KEY2";
			gpios = <&gpio0 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
	};

	chosen {
/* Note: use RAM_DLM for ".ram_dlm" when a shared SRAM will be used for "zephyr,sram" */
		zephyr,sram = &ram_dlm;
		zephyr,flash = &flash;
		zephyr,flash-controller = &flash_mspi;
		telink,ipc-interface = &ipc0;
		zephyr,entropy = &trng0;
		zephyr,code-partition = &slot0_partition;
	};
};

&cpu0 {
	clock-frequency = <160000000>;
};

&wifi {
	status = "okay";
};

&flash {
	reg = <0x80000000 0x300000>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x20000>;
		};
		slot0_partition: partition@20000 {
			label = "image-0";
			reg = <0x20000 0x68000>;
		};
		slot1_partition: partition@88000 {
			label = "image-1";
			reg = <0x88000 0x68000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0x4000>;
		};
		storage_partition: partition@f4000 {
			label = "storage";
			reg = <0xf4000 0x0000a000>;
		};
	};
};

&trng0 {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&spi {
	status = "okay";
	cs0-pin = "GPIO_PA1";
	pinctrl-0 = <&spi2_clk_default &spi2_miso_default &spi2_mosi_default>;
	pinctrl-names = "default";
};

&i2c {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-0 = <&i2c_scl_default &i2c_sda_default>;
	pinctrl-names = "default";
};

&pwm0 {
	status = "okay";
	pinctrl-ch4 = <&pwm_ch4_p20_default>;
};
