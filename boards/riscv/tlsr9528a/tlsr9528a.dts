/dts-v1/;

#include <freq.h>
#include <telink/telink_b92.dtsi>
#include "tlsr9528a-pinctrl.dtsi"

/ {
	model = "telink,b92";
	compatible = "telink,tlsr9528a";

	aliases {
		led0 = &led_blue;
		led1 = &led_green;
		led2 = &led_white;
		led3 = &led_red;
		sw0 = &key_1;
		sw2 = &key_3;
		pwm-led0 = &pwm_led_blue;
		pwm-0 = &pwm0;
	};

	leds {
		compatible = "gpio-leds";

		led_blue: led_0 {
			gpios = <&gpiod 0 GPIO_ACTIVE_HIGH>;
			label = "LED Blue";
		};

		led_green: led_1 {
			gpios = <&gpiod 1 GPIO_ACTIVE_HIGH>;
			label = "LED Green";
		};

		led_white: led_2 {
			gpios = <&gpioe 6 GPIO_ACTIVE_HIGH>;
			label = "LED White";
		};

		led_red: led_3 {
			gpios = <&gpioe 7 GPIO_ACTIVE_HIGH>;
			label = "LED Red";
		};
	};

	pwm_leds {
		compatible = "pwm-leds";

		pwm_led_blue: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM LED Blue";
		};
	};

	keys {
		compatible = "gpio-keys";
		key_1: button_1 {
			label = "User KEY1";
			gpios = <&gpiod 2 GPIO_PULL_DOWN>;
		};
		key_3: button_3 {
			label = "User KEY3";
			gpios = <&gpiod 6 GPIO_PULL_DOWN>;
		};
	};

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &ram_dlm;
		zephyr,flash = &flash;
		zephyr,flash-controller = &flash_mspi;
		zephyr,entropy = &trng0;
		zephyr,code-partition = &slot0_partition;
		zephyr,ieee802154 = &ieee802154;
	};
};

&cpu0 {
	clock-frequency = <48000000>;
};

&ram_ilm {
	reg = <0x00000000 0x00040000>;
};

&ram_dlm {
	reg = <0x00080000 0x00040000>;
};

&flash {
	reg = <0x20000000 0x100000>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x18000>;
		};
		slot0_partition: partition@18000 {
			label = "image-0";
			reg = <0x18000 0x6C000>;
		};
		slot1_partition: partition@84000 {
			label = "image-1";
			reg = <0x84000 0x6C000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0x4000>;
		};
		storage_partition: partition@f4000 {
			label = "storage";
			reg = <0xf4000 0x0000b000>;
			/* region <0xff000 0x1000> is reserved for Telink B92 SDK's data */
		};
	};
};

&gpiob {
	status = "okay";
};

&gpioc {
	status = "okay";
};

&gpiod {
	interrupts = <37 1>;
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_pb2_default &uart0_rx_pb3_default>;
	pinctrl-names = "default";
};

&trng0 {
	status = "okay";
};

&ieee802154 {
	status = "okay";
};

&pwm0 {
	status = "okay";
	clock-frequency = <93750>;
	pinctrl-0 = <&pwm_ch0_pd0_default>;
	pinctrl-names = "default";
};

&lspi {
	status = "okay";
	cs0-pin = "LSPI_CSN_PE0_PIN";
	pinctrl-0 = <&lspi_clk_pe1_default &lspi_miso_pe3_default &lspi_mosi_pe2_default>;
	pinctrl-names = "default";
};

&gspi {
	status = "okay";
	cs0-pin = "GPIO_PA1";
	pinctrl-0 = <&gspi_clk_pa2_default &gspi_miso_pa3_default &gspi_mosi_pa4_default>;
	pinctrl-names = "default";
};

&i2c {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	pinctrl-0 = <&i2c_scl_pc0_default &i2c_sda_pc1_default>;
	pinctrl-names = "default";
};

&adc {
	status = "okay";
	vref-internal-mv = <1200>;
	sample-freq = <DT_FREQ_K(96)>;
	pinctrl-0 = <&adc_pb0_default>;
	pinctrl-names = "default";
};

zephyr_udc0: &usbd {
	compatible = "telink,b91-usbd";
	status = "okay";
};
